# Server Configuration
NODE_ENV=development
PORT=5000

# Database
MONGODB_URI=mongodb://localhost:27017/ai-language-learning

# JWT Secrets
JWT_SECRET=super-secret-jwt-key-for-development-only-change-in-production-12345
JWT_REFRESH_SECRET=super-secret-refresh-jwt-key-for-development-only-change-in-production-67890

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# OpenAI API
OPENAI_API_KEY=${OPENAI_API_KEY}
OPENAI_API_BASE=https://api.openai.com/v1

# Stripe Configuration (using test keys for development)
STRIPE_SECRET_KEY=sk_test_51234567890abcdef_test_dummy_key_for_development
STRIPE_PUBLISHABLE_KEY=pk_test_51234567890abcdef_test_dummy_key_for_development
STRIPE_WEBHOOK_SECRET=whsec_test_dummy_webhook_secret_for_development

# Stripe Price IDs (create these in your Stripe dashboard)
STRIPE_PREMIUM_MONTHLY_PRICE_ID=price_premium_monthly_test
STRIPE_PREMIUM_YEARLY_PRICE_ID=price_premium_yearly_test
STRIPE_PRO_MONTHLY_PRICE_ID=price_pro_monthly_test
STRIPE_PRO_YEARLY_PRICE_ID=price_pro_yearly_test

# Email Configuration (optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@languagelearningapp.com
SMTP_PASS=your-app-password-here

# File Upload (optional - for avatars and media)
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880

# Redis (optional - for caching and sessions)
REDIS_URL=redis://localhost:6379

# Google OAuth (optional)
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

